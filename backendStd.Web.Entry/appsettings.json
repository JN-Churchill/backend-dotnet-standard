{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",
  
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=backendstd;Uid=root;Pwd=123456;CharSet=utf8mb4;"
  },
  
  "DbConnectionOptions": {
    "ConnectionConfigs": [
      {
        "ConfigId": "Main",
        "DbType": "MySql",
        "ConnectionString": "${ConnectionStrings:Default}",
        "IsAutoCloseConnection": true,
        "EnableInitDb": true,
        "EnableDiffLog": false,
        "EnableSqlLog": true
      }
    ]
  },
  
  "JWTSettings": {
    "ValidateIssuerSigningKey": true,
    "IssuerSigningKey": "your-256-bit-secret-key-change-this-in-production-please-use-strong-key",
    "ValidateIssuer": true,
    "ValidIssuer": "backendStd",
    "ValidateAudience": true,
    "ValidAudience": "backendStd.Client",
    "ValidateLifetime": true,
    "ExpiredTime": 120,
    "ClockSkew": 5
  },
  
  "RefreshTokenOptions": {
    "ExpiredTime": 43200
  },
  
  "RedisOptions": {
    "Configuration": "localhost:6379,password=,defaultDatabase=0",
    "InstanceName": "backendStd:"
  },
  
  "SnowIdOptions": {
    "WorkerId": 1
  },
  
  "FileUploadOptions": {
    "MaxSize": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx", ".xls", ".xlsx"],
    "UploadPath": "uploads"
  },
  
  "CorsOptions": {
    "AllowOrigins": ["http://localhost:4200", "http://localhost:8080"],
    "AllowMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowHeaders": ["*"],
    "AllowCredentials": true
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  },
  
  "AllowedHosts": "*",
  "Urls": "http://0.0.0.0:5000"
}
