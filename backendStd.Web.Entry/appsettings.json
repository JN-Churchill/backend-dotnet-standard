{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",

    "ConnectionStrings": {
        "Default": "server=192.168.5.234;port=9002;Database=qiu;Uid=root;Pwd=tdcz12345;AllowLoadLocalInfile=true;SslMode=none;"
    },
  
  "DbConnectionOptions": {
    "ConnectionConfigs": [
        {
            "ConfigId": "Main",
            "DbType": "MySql",
            "ConnectionString": "server=192.168.5.234;port=9002;Database=qiu;Uid=root;Pwd=tdcz12345;AllowLoadLocalInfile=true;SslMode=none",
            "IsAutoCloseConnection": true,
            "EnableInitDb": true,
            "EnableDiffLog": false,
            "EnableSqlLog": true
        }
    ]
  },
  
  "JWTSettings": {
    "ValidateIssuerSigningKey": true,
    "IssuerSigningKey": "your-256-bit-secret-key-change-this-in-production-please-use-strong-key",
    "ValidateIssuer": true,
    "ValidIssuer": "backendStd",
    "ValidateAudience": true,
    "ValidAudience": "backendStd.Client",
    "ValidateLifetime": true,
    "ExpiredTime": 120,
    "ClockSkew": 5
  },
  
  "RefreshTokenOptions": {
    "ExpiredTime": 43200
  },
  
  "RedisOptions": {
    "Configuration": "localhost:6379,password=,defaultDatabase=0",
    "InstanceName": "backendStd:"
  },
  
  "SnowIdOptions": {
    "WorkerId": 1
  },
  
  "FileUploadOptions": {
    "MaxSize": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx", ".xls", ".xlsx"],
    "UploadPath": "uploads"
  },
  
  "RequestLoggingOptions": {
    "Enabled": true,
    "LogRequestBody": true,
    "LogResponseBody": false,
    "MaxRequestBodyLength": 10240,
    "MaxResponseBodyLength": 10240
  },
  
  "RateLimitOptions": {
    "Enabled": true,
    "DefaultWindow": 60,
    "DefaultLimit": 100,
    "IpRateLimit": {
      "Enabled": true,
      "Window": 60,
      "Limit": 100
    },
    "UserRateLimit": {
      "Enabled": true,
      "Window": 60,
      "Limit": 200
    }
  },
  
  "Quartz": {
    "Jobs": [
      {
        "Name": "DataCleanupJob",
        "Type": "backendStd.Core.Jobs.DataCleanupJob",
        "CronExpression": "0 0 2 * * ?",
        "Description": "数据清理任务 - 每天凌晨2点执行"
      },
      {
        "Name": "DataStatisticsJob",
        "Type": "backendStd.Core.Jobs.DataStatisticsJob",
        "CronExpression": "0 0 1 * * ?",
        "Description": "数据统计任务 - 每天凌晨1点执行"
      }
    ]
  },
  
  "CorsOptions": {
    "AllowOrigins": ["http://localhost:4200", "http://localhost:8080"],
    "AllowMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowHeaders": ["*"],
    "AllowCredentials": true
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning"
    }
  },
  
  "AllowedHosts": "*",
  "Urls": "http://0.0.0.0:5000"
